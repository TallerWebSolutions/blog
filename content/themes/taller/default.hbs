  {{! Page Meta }}
  <title>{{meta_title}}</title>
  <meta name="description" content="{{meta_description}}" />
  <meta name="google-site-verification" content="uEE2tfPpwFQYDT6HnmrIILHQgL0rS_lvfjuvk4vGLeg" />

  <meta name="HandheldFriendly" content="True" />
  <meta name="MobileOptimized" content="320" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="shortcut icon" href="{{@blog.url}}/assets/images/favicon-48x48.png" type="image/png" />

  {{! Styles'n'Scripts }}
  <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,300italic,700' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700' rel='stylesheet' type='text/css'>
  <link rel="stylesheet" type="text/css" href="/assets/css/main.css" />
  {{!-- <link rel="stylesheet" type="text/css" href="/assets/css/prism.css" /> --}}

  {{#if post}}
    {{#post}}
      <meta property="og:image" content="{{author.metaImage}}" />
      <meta property="og:image:width" content="200">
      <meta property="og:image:height" content="200">
    {{/post}}
  {{else}}
    <meta property="og:site_name" content="Taller Blog" />
    <meta property="og:title" content="{{meta_title}}" />
    <meta property="og:url" content="{{@blog.url}}{{url}}" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="pt_BR" />
    <meta property="og:image" content="{{@blog.url}}/assets/images/og-logo.jpg" />
    <meta property="og:image:type" content="image/jpeg">
    <meta property="og:image:width" content="200">
    <meta property="og:image:height" content="200">
  {{/if}}

  {{! Ghost outputs important style and meta data with this tag }}
  {{ghost_head}}
</head>
<body class="{{body_class}}" lang="pt-br">

  <header id="site-head" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
    <div id="site-head-content" class="inner">
      <a href="{{@blog.url}}">
        <img id="blog-logo" src="{{@blog.url}}/assets/images/mini-horizontal-policromia.png" alt="Taller logo">
      </a>
      <h1 class="blog-title">{{@blog.title}}</h1>
      <ul id="main-nav">
        <li>
          <a href="{{@blog.url}}" title="Blog Home" class="active blog-anchor">
            In√≠cio
          </a>
        </li>
        <li>
          <a target="_blank" href="http://taller.net.br/" title="Taller Main Website">
            Site da Taller
          </a>
        </li>
        <li>
          <a target="_blank" href="http://drupaldeelite.com.br/" title="Drupal de Elite">
            Drupal de Elite
          </a>
        </li>
        <li>
          <a target="_blank" href="{{@blog.url}}/rss/" class="subscribe" title="Subscribe to the blog">
          </a>
        </li>
        <li class="search-container">
          {{!-- <a href="#" class="search-button" title="Search the blog."></a> --}}
          <form id="search-form">
            <input id="search-field" />
            <i id="search-icon" href="javascrit:;"></i>
            {{!-- <input id="search-submit" class="fa fa-search" type="submit" value=""> --}}
          </form>
        </li>
      </ul>
    </div>

  </header>

  <section id="search-results"></section>

